@using AspNetCoreİdentity.Web.ViewModels;

@{
    ViewData["Title"] = "Index";
}
@model UserViewModel
<h1>Kullanici Bilgileri</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
       <user-picture-thumbnail picture-url="@Model.PictureUrl"></user-picture-thumbnail>
    </div>

</div>

<div class="row">

    <div class="col-md-6 offset-md-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Kullanici Adi</th>
                    <th>Email</th>
                    <th>Telefon No</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.Phone</td>
                </tr>
            </tbody>
        </table>
    </div>
    

</div>


