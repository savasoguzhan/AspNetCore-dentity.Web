@using AspNetCoreİdentity.Web.ViewModels;
@{
    ViewData["Title"] = "Reset Password";
}


@model ForgetPasswordViewModel

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success" role="alert">
                +
                @TempData["success"]
            </div>
        }
        <h3>Sifre Yenileme Linki Eposta Adresinize Gonderilecektir</h3>
        <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>
        <form method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />

            </div>
            <button type="submit" class="btn-success">Gonder</button>

        </form>

    </div>

</div>